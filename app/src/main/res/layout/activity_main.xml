<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:background="@drawable/animal2"/>

    <TextView
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="-150dp"
        android:text="Products"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:text="All Products"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:textSize="18dp"/>

    <LinearLayout
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:id="@+id/linearlayout"
        android:layout_marginLeft="20dp">

        <TextView
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:text="Refined by"
            android:textColor="#ffffff"
            android:textSize="23dp"
            android:textStyle="bold"
            android:textAlignment="center"/>

        <ImageView
            android:id="@+id/image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/ic_keyboard_arrow_down_black_24dp"/>

    </LinearLayout>

    <ScrollView
        android:layout_marginTop="10dp"
        android:layout_width="210dp"
        android:id="@+id/scrollview"
        android:layout_height="530dp">


    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        android:layout_width="210dp"
        android:visibility="invisible"
        android:background="#e8e8e8"
        android:id="@+id/linearlayout1"
        android:layout_height="535dp">

    <TextView
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:text="PRICE"
        android:textColor="#112d59"
        android:textSize="20dp"
        android:textStyle="bold" />

    <CheckBox
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:text=" ₹ 0 -499"
        android:textColor="#112d59"
        android:textSize="17dp"/>
    <CheckBox
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:text=" ₹ 500-999"
        android:textColor="#112d59"
        android:textSize="17dp"/>
    <CheckBox
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:text=" ₹ 1000-1499"
        android:textColor="#112d59"
        android:textSize="17dp"/>

    <CheckBox
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:text=" ₹ 2000-above"
        android:textColor="#112d59"
        android:textSize="17dp"/>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dip"
        android:layout_marginTop="5dp"/>

    <TextView
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:text="BRAND"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#112d59"/>

    <CheckBox
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:text=" Loreum"
        android:textColor="#112d59"
        android:textSize="17dp"/>
    <CheckBox
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:text=" Ipsum"
        android:textColor="#112d59"
        android:textSize="17dp"/>
    <CheckBox
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:text=" Loreum"
        android:textColor="#112d59"
        android:textSize="17dp"/>
    <CheckBox
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:text=" Loreum"
        android:textColor="#112d59"
        android:textSize="17dp"/>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dip"
        android:layout_marginTop="5dp"/>

    <TextView
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:text="PRODUCT TYPE"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#112d59"/>
    <CheckBox
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:text=" Dry Food"
        android:textColor="#112d59"
        android:textSize="17dp"/>
    <CheckBox
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:text=" Food"
        android:textColor="#112d59"
        android:textSize="17dp"/>
    <CheckBox
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:text="Oral &amp; Dentalcare"
        android:textColor="#112d59"
        android:textSize="17dp"/>
    <CheckBox
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:text="Oral &amp; DentalSolutions"
        android:textColor="#112d59"
        android:textSize="16dp"/>
    <CheckBox
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:text="Treats Wet Food"
        android:textColor="#112d59"
        android:textSize="16dp"/>


    </LinearLayout>

